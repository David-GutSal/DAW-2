package p01;

import p01.utils.TerminalUtils;

public class Main {
	public static void main(String arg[]) {
		
		int numero = (int) (Math.random()*10+1);
		for(int i = 0; i <= 20; i++) {
			int numComp = (int) (Math.random()*10+1);
			if(numero < numComp) {
				System.out.println("El primer numero " + numero + " es Menor que " + numComp);
			}else if(numero == numComp) {
				System.out.println("El primer numero " + numero + " es Igual " + numComp);
			}else {
				System.out.println("El primer numero " + numero + " es Mayor " + numComp);
			}
		}
		
		System.out.println("===========Inicia el juego===========");
		int cpuNum = (int) (Math.random()*3+1);
		String seleccion = TerminalUtils.inputText();
		switch(cpuNum) {
			case 1:
				//Piedra
				if(seleccion.equals("piedra")) {
					System.out.print("Empate");
				}else if (seleccion.equals("papel")){
					System.out.print("Ganaste!!!");
				}else {
					System.out.print("Pierdes LuL");
				}
			break;
			case 2:
				//Papel
				if(seleccion.equals("piedra")) {
					System.out.print("Pierdes LuL");
				}else if (seleccion.equals("papel")){
					System.out.print("Empate");
				}else {
					System.out.print("Ganaste!!!");
				}
			break;
			case 3:
				//Tijera
				if(seleccion.equals("piedra")) {
					System.out.print("Pierdes LuL");
				}else if (seleccion.equals("papel")){
					System.out.print("Ganaste!!!");
				}else {
					System.out.print("Empate");
				}
			break;
		}
		
		
	}

}
