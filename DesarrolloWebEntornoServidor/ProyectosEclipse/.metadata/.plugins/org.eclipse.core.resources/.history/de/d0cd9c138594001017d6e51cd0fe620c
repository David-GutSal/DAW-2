package p01.view;

import p01.entities.Cuenta;
import p01.utils.TerminalUtils;

public class Banco {
	public static void banco() {
		boolean exit = true;
		CuentaCorriente cc = new CuentaCorriente(1, 0.0);
		CuentaCorriente cc2 = new CuentaCorriente(2, 0.0);
		CuentaAhorro ca = new CuentaAhorro(3, 0.0);
		CuentaAhorro ca2 = new CuentaAhorro(4, 0.0);
		do {
			TerminalUtils.output("Cuentas:");
			TerminalUtils.output("1. Cuenta Ahorro");
			TerminalUtils.output("2. Cuenta Corriente");
			TerminalUtils.output("3. Salir");

			int select = TerminalUtils.inputInt();
			switch (select) {
			case 1:
				
				break;
			case 2:
				
				break;
			case 3:
				exit = false;
				break;
			default:
				TerminalUtils.output("Opcion no valida");
				break;
			}

		} while (exit);
	}
}

class CuentaCorriente extends Cuenta {

	public CuentaCorriente(int a, double saldo) {
		super(a, saldo);
	}
	
	@Override
	public void sacarDinero(double sum) {
		if (sum > 0)
			saldo -= sum;
		else
			System.err.println("Cuenta.sacarDinero(...): " + "no se puede sacar una suma negativa");
	}

}

class CuentaAhorro extends Cuenta {

	public CuentaAhorro(int a, double saldo) {
		super(a, saldo);
	}
	@Override
	public void ingresarDinero(double sum) {
		if (sum > 0)
			saldo += sum;
		else
			System.err.println("No se puede ingresar una cantidad negativa");
	}

}
