package p01.view;

import p01.utils.TerminalUtils;

public class PiedraPapelTijera {
	
	
	int cpuNum = (int) (Math.random()*3+1);
	String seleccion = TerminalUtils.inputText();
	switch(cpuNum) {
		case 1:
			//Piedra
			if(seleccion.equals("piedra")) {
				System.out.print("Empate");
			}else if (seleccion.equals("papel")){
				System.out.print("Ganaste!!!");
			}else {
				System.out.print("Pierdes LuL");
			}
		break;
		case 2:
			//Papel
			if(seleccion.equals("piedra")) {
				System.out.print("Pierdes LuL");
			}else if (seleccion.equals("papel")){
				System.out.print("Empate");
			}else {
				System.out.print("Ganaste!!!");
			}
		break;
		case 3:
			//Tijera
			if(seleccion.equals("piedra")) {
				System.out.print("Pierdes LuL");
			}else if (seleccion.equals("papel")){
				System.out.print("Ganaste!!!");
			}else {
				System.out.print("Empate");
			}
		break;
	}
}
