package p01.view;

import p01.utils.TerminalUtils;

public class PiedraPapelTijera {

	public static void ppt() {

		TerminalUtils.output("===========Inicia el juego===========");
		int cpuNum = (int) (Math.random() * 3 + 1);
		String seleccion = TerminalUtils.inputText();
		switch (cpuNum) {
		case 1:
			// Piedra
			if (seleccion.equals("piedra")) {
				TerminalUtils.output("Empate");
			} else if (seleccion.equals("papel")) {
				TerminalUtils.output("Ganaste!!!");
			} else {
				TerminalUtils.output("Pierdes LuL");
			}
			break;
		case 2:
			// Papel
			if (seleccion.equals("piedra")) {
				TerminalUtils.output("Pierdes LuL");
			} else if (seleccion.equals("papel")) {
				TerminalUtils.output("Empate");
			} else {
				TerminalUtils.output("Ganaste!!!");
			}
			break;
		case 3:
			// Tijera
			if (seleccion.equals("piedra")) {
				TerminalUtils.output("Pierdes LuL");
			} else if (seleccion.equals("papel")) {
				TerminalUtils.output("Ganaste!!!");
			} else {
				TerminalUtils.output("Empate");
			}
			break;
		}
	}
}
