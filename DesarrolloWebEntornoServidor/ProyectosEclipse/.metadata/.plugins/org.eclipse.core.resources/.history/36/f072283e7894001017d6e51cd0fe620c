package p01.view;

import java.util.ArrayList;
import java.util.List;

import p01.entities.Persona;
import p01.utils.TerminalUtils;

public class Usuarios {
	static List<Persona> pl = new ArrayList<Persona>();

	public static void usuarios() {
		for (int i = 0; i < 5; i++) {
			TerminalUtils.output("Nombre:");
			String name = TerminalUtils.inputText();
			TerminalUtils.output("Edad:");
			int age = TerminalUtils.inputInt();
			Persona p = new Persona(name, age);
			pl.add(p);
		}

		for (Persona lp : pl) {
			TerminalUtils.output(lp.toString());
		}
	}
}
